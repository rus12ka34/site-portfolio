{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/app": ["src/1-app"],
      "@/pages": ["src/2-pages"],
      "@/widgets": ["src/3-widgets"],
      "@/features": ["src/4-features"],
      "@/entities": ["src/5-entities"],
      "@/shared": ["src/6-shared"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}